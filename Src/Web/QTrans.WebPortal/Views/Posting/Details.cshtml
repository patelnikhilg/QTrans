@model QTrans.Models.PostingDetails
@{
    ViewBag.Title = "Post Details";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<div class="card" style="border:none">
    <div class="card-header">
        <strong>Posting Profile</strong>
    </div>
    <div class="card-body">
        <div class="row form-group" >
            <div class="col col-md-3">
                <label class=" form-control-label">
                    @Html.DisplayNameFor(model => model.postingProfile.posttype)
                </label>
                &nbsp; : &nbsp;
                <span class="form-control-static">@Html.DisplayFor(model => model.postingProfile.posttype)</span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @*@Html.DisplayNameFor(model => model.postingProfile.soureaddress)*@
                    From Address:
                </label>&nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.soureaddress),
                @Html.DisplayFor(model => model.postingProfile.src_landmark)
                @Html.DisplayFor(model => model.postingProfile.src_city),
                @Html.DisplayFor(model => model.postingProfile.src_state)-@Html.DisplayFor(model => model.postingProfile.src_pincode)
            </div>
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @*@Html.DisplayNameFor(model => model.postingProfile.destinationadress)*@
                    To Address:
                </label>
                &nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.destinationadress),
                @Html.DisplayFor(model => model.postingProfile.dst_landmark),
                @Html.DisplayFor(model => model.postingProfile.dst_city),
                @Html.DisplayFor(model => model.postingProfile.dst_state)-@Html.DisplayFor(model => model.postingProfile.dst_pincode)

            </div>
        </div>
        <div class="form-group">
           
        </div>
        <div class="row form-group">
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @Html.DisplayNameFor(model => model.postingProfile.materialtype)
                </label>
                &nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.materialtype)
            </div>
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @Html.DisplayNameFor(model => model.postingProfile.description)
                </label>
                &nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.description)
            </div>
        </div>
       
        <div class="row form-group">
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @Html.DisplayNameFor(model => model.postingProfile.packagetype)
                </label>
                &nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.packagetype)
            </div>
            <div class="col-sm-6">
                <label class=" form-control-label">
                    @Html.DisplayNameFor(model => model.postingProfile.packagetypedesc)
                </label>
                &nbsp; : &nbsp;
                @Html.DisplayFor(model => model.postingProfile.packagetypedesc)
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    @{
        var addDetails = Html.Partial("PostDetails", Model);
        addDetails = new MvcHtmlString(addDetails.ToHtmlString());
    }
    @addDetails
</div>
<div>
    <div class="fa-hover col-lg-3 col-md-6"><i class="fa fa-edit"></i>@Html.ActionLink("Edit", "Edit", new { id = Model.postingid })</div>
</div>

