@section Scripts
{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#example1').DataTable({ info: true, select: true})

            var table = $('#example1').DataTable();

            table.on('select', function (e, dt, type, indexes) {
                if (type === 'row') {
                    var data = table.rows(indexes).data();
                    //alert('you clicked on post number: ' + data[0][0]);
                    var model = @Html.Raw(Json.Encode(Model));
                    var post = model.filter(function (el) {
                        return el.postingid == data[0][0]; // Changed this so a home would match
                    });
                    if (post.length > 0) {
                        //alert(post[0].postingid);
                      $.ajax({
                            type: "GET",
                          url: "/QTSearchLoad/GetPostDetail?dtlpostId=" + post[0].dtlpostingid,
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            success: function (response) {
                                if (response != null) {
                                    document.getElementById("imgPostUser").src = response.Response.photo;
                                    document.getElementById("postUserCity").innerText = response.Response.city + ', ' + response.Response.state;

                                    document.getElementById('boxDetail').style.visibility = 'visible';
                                 } else {
                                    alert("Something went wrong");
                                }
                            },
                            failure: function (response) {
                                alert(response.responseText);
                            },
                            error: function (response) {
                                alert(response.responseText);
                            }
                        });





                      //  $('#boxDetail').style.visibility = 'visible';
                    }
                    // do something with the ID of the selected items
                }
            });
        })



    </script>
